{
    "name": "quantaquirk/prompts",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Tomáš Selič (Smisch-DEV)",
            "email": "contact@smisch.sk"
        }
    ],
    "autoload": {
        "psr-4": {
            "QuantaQuirk\\Prompts\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "quantaquirk/collections": "^1.0.0",
        "symfony/console": "^6.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "pestphp/pest": "^2.3",
        "mockery/mockery": "^1.5",
        "phpstan/phpstan-mockery": "^1.1"
    },
    "conflict": {
        "quantaquirk/console": ">=10.0.0 <10.25.0",
        "quantaquirk/framework": ">=10.0.0 <10.25.0"
    },
    "suggest": {
        "ext-pcntl": "Required for the spinner to be animated."
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "0.1.x-dev"
        }
    },
    "minimum-stability": "dev"
}
